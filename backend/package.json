{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/server.js",
  "bin": "dist/exe-entry.js",
  "scripts": {
    "dev": "npx prisma migrate deploy && ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "build:exe": "node scripts/build-exe.js"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [
      "dist/public/**/*",
      "node_modules/@prisma/client/**/*",
      "node_modules/.prisma/client/**/*"
    ],
    "targets": [
      "node22-win-x64"
    ],
    "outputPath": "release"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@fastify/auth": "^5.0.3",
    "@fastify/cookie": "^11.0.2",
    "@fastify/multipart": "^9.3.0",
    "@fastify/static": "^8.3.0",
    "@prisma/adapter-better-sqlite3": "^7.0.0",
    "@prisma/client": "^6.18.0",
    "archiver": "^7.0.1",
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.1",
    "fastify-cors": "^6.0.3",
    "fastify-plugin": "^5.1.0",
    "fs-extra": "^11.3.2",
    "pdfkit": "^0.17.2",
    "prisma": "^6.18.0"
  },
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/fontkit": "^2.0.8",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.10.0",
    "@types/pdfkit": "^0.17.3",
    "esbuild": "^0.27.1",
    "postject": "^1.0.0-alpha.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
